<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">162dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>