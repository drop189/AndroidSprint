<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_layout"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="@dimen/buttons_container_width"
        android:layout_height="@dimen/buttons_container_height"
        android:layout_marginStart="@dimen/buttons_container_indent"
        android:layout_marginEnd="@dimen/buttons_container_indent"
        android:layout_marginBottom="@dimen/buttons_container_bottom_indent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            style="@style/StyleNavButton"
            android:layout_marginEnd="@dimen/half_button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/navigation_bar_color"
            android:text="@string/navigation_bar_text" />

        <Button
            style="@style/StyleNavButton"
            android:layout_marginStart="@dimen/half_button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/status_bar_color"
            android:text="@string/status_bar_text"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="textEnd" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>