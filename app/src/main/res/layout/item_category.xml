<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/indent_8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/main_corner_radius"
    tools:layout_height="@dimen/card_view_height"
    tools:layout_width="156dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/burger"
            tools:layout_height="130dp"
            tools:layout_width="156dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/indent_8dp"
            android:layout_marginTop="@dimen/indent_8dp"
            android:layout_marginBottom="@dimen/indent_4dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Бургеры"
            android:textAllCaps="true"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/style_title_14_text_size"
            tools:layout_height="16dp"
            tools:layout_width="73dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/indent_8dp"
            android:layout_marginVertical="@dimen/indent_4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Рецепты всех популярных видов бургеров"
            android:textColor="#666666"
            android:textSize="12sp"
            tools:layout_height="50dp"
            tools:layout_width="140dp"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>